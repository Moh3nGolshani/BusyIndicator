                                <EasingDoubleKeyFrame KeyTime="00:00:00.10" Value="0.2" />
                                <EasingDoubleKeyFrame KeyTime="00:00:00.90" Value="0.2" />
                                <EasingDoubleKeyFrame KeyTime="00:00:01" Value="1" />
                                <EasingDoubleKeyFrame KeyTime="00:00:01.10" Value="0.5" />
                            </DoubleAnimationUsingKeyFrames>
                            <DoubleAnimationUsingKeyFrames
                                BeginTime="00:00:00"
                                Storyboard.TargetName="Rectangle02"
                                Storyboard.TargetProperty="(UIElement.Opacity)"
                                >
                                <EasingDoubleKeyFrame KeyTime="00:00:00.10" Value="1" />
                                <EasingDoubleKeyFrame KeyTime="00:00:00.20" Value="0.5" />
                                <EasingDoubleKeyFrame KeyTime="00:00:00.30" Value="0.25" />
                                <EasingDoubleKeyFrame KeyTime="00:00:00.40" Value="0.2" />
